<?xml version="1.0" encoding="utf-8"?>
<com.alexvasilkov.gestures.views.GestureFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="600dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFC107"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ribbon"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="3"
                        android:src="@drawable/ribbon_head9" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_weight="2"
                    android:background="#70C1B3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/first_rib" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="การเขียนผ่านตัวอักษร"
                                android:textColor="#ffffff"
                                android:textSize="13dp" />

                            <Button
                                android:id="@+id/btn1_group1"
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:background="#ffffff"
                                android:text="เลือกรูป"
                                android:textSize="8dp" />

                            <ImageView
                                android:id="@+id/icon1_group1"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn2_group1"
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="20dp"
                                android:background="#ffffff"
                                android:text="เลือกรูป"
                                android:textSize="8dp" />

                            <ImageView
                                android:id="@+id/icon2_group1"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="การพูดผ่านภาษาพูด"
                                android:textColor="#ffffff"
                                android:textSize="13dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ภาษากายผ่านการแสดงออก"
                                android:textColor="#ffffff"
                                android:textSize="13dp" />

                            <Button
                                android:id="@+id/btn3_group1"
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:background="#ffffff"
                                android:text="เลือกรูป"
                                android:textSize="8dp" />

                            <ImageView
                                android:id="@+id/icon3_group1"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_weight="2"
                    android:background="#B271BF">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:src="@drawable/second_rib" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="1. วิเคราะห์"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/edt1_group2"
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:paddingTop="3dp"
                                android:textSize="13dp" />
                            <Button
                                android:id="@+id/btn1_group2"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:background="#ffffff"
                                android:text="Check"
                                android:textSize="8dp" />
                            <ImageView
                                android:id="@+id/icon1_group2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/correct_mark"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="2. วิเคราะห์"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/edt2_group2"
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:paddingTop="3dp"
                                android:textSize="13dp" />
                            <Button
                                android:id="@+id/btn2_group2"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:background="#ffffff"
                                android:text="Check"
                                android:textSize="8dp" />
                            <ImageView
                                android:id="@+id/icon2_group2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/correct_mark"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:text="3. วิเคราะห์โอกาสในการสื่อสาร เช่น การเป็นพิธีกร"
                                android:textSize="13dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#7734E0"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:src="@drawable/third_rib" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/sm_arrow1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn1_group3"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:text="ใส่ลิ้ง"
                                android:background="#ffffff"
                                android:textSize="8dp"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:id="@+id/img1_group3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="5.ปฏิกริยาตอบกลับ"
                                android:textColor="#ffffff"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/sm_arrow2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:id="@+id/img2_group3"
                                android:src="@drawable/cameraicon"
                                android:onClick="openCamera"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp"
                                android:gravity="center"
                                android:text="1.ผู้ส่งสาร"
                                android:textColor="#ffffff"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/sm_arrow3" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/img2_group3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp"
                                android:gravity="center"
                                android:text="2.สาร"
                                android:textColor="#ffffff"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/sm_arrow3" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/img3_group3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp"
                                android:gravity="center"
                                android:text="3.สื่อกลาง"
                                android:textColor="#ffffff"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/sm_arrow3" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/img4_group3" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp"
                                android:gravity="center"
                                android:text="4.ผู้รับสาร"
                                android:textColor="#ffffff"
                                android:textSize="13dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="2"
                    android:background="#DB3B65"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/fourth_rib" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="2dp"
                        android:paddingLeft="40dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="125dp"
                            android:src="@drawable/arrow1" />

                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="130dp"
                            android:orientation="vertical"
                            android:paddingRight="0dp">

                            <Button
                                android:id="@+id/btn1_group4"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="10dp"
                                android:background="#ffffff"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:paddingTop="3dp"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/btn2_group4"
                                android:layout_width="120dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="2dp"
                                android:background="#ffffff"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:paddingTop="3dp"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/btn3_group4"
                                android:layout_width="140dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="2dp"
                                android:background="#ffffff"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:paddingTop="3dp"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/btn4_group4"
                                android:layout_width="160dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="2dp"
                                android:background="#ffffff"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:paddingTop="3dp"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/btn5_group4"
                                android:layout_width="180dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="2dp"
                                android:background="#ffffff"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:paddingTop="3dp"
                                android:textSize="10dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-50dp"
                                android:src="@drawable/arrow2" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</com.alexvasilkov.gestures.views.GestureFrameLayout>
